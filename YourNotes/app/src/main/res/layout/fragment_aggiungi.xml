<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AggiungiFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#F3F3F3"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <Button
            android:id="@+id/backButton1"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_marginTop="5pt"
            android:backgroundTint="#F3F3F3"
            android:text="Indietro"
            android:textColor="@color/black"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/backButton1"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15pt"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="-27dp"
            android:text="Carica i tuoi appunti:"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/editNameRegister"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15pt"
            android:layout_marginTop="-38dp"
            android:text="Nome Corso:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editNameRegister"
            android:layout_width="340dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="151dp"
            android:layout_marginEnd="33dp"
            android:background="@color/white"
            android:gravity="center"
            android:hint=" Inserisci il nome del corso"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editNameRegister"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15pt"
            android:layout_marginTop="12dp"
            android:text="Corso di laurea:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editEmailRegister"
            android:layout_width="340dp"
            android:layout_height="48dp"
            android:layout_below="@+id/editNameRegister"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="53dp"
            android:gravity="center"
            android:background="@color/white"
            android:hint=" Inserisci corso di laurea"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editEmailRegister"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15pt"
            android:layout_marginTop="14dp"
            android:text="Anno di insegnamento:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editPasswordRegister"
            android:layout_width="340dp"
            android:layout_height="48dp"
            android:layout_below="@+id/editEmailRegister"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@color/white"
            android:hint=" Inserisci anno di insegnamento"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editPasswordRegister"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15pt"
            android:layout_marginTop="16dp"
            android:text="Semestre:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editConfirmPasswordRegister"
            android:layout_width="340dp"
            android:layout_height="48dp"
            android:layout_below="@+id/editPasswordRegister"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:background="@color/white"
            android:hint=" Inserisci semestre"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editConfirmPasswordRegister"
            android:layout_alignParentStart="true"
            android:layout_marginStart="42dp"
            android:layout_marginLeft="15pt"
            android:layout_marginTop="14dp"
            android:text="File degli appunti:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/uploadFile"
            android:layout_width="340dp"
            android:layout_height="48dp"
            android:layout_below="@+id/editConfirmPasswordRegister"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="38dp"
            android:layout_marginTop="51dp"
            android:background="@color/white"
            android:hint="Carica il file degli appunti"
            android:textSize="20dp" />

        <Button
            android:id="@+id/confirmAccountButton"
            android:layout_width="191dp"
            android:layout_height="45dp"
            android:layout_below="@+id/uploadFile"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"

            android:layout_marginTop="15dp"
            android:layout_marginEnd="93dp"
            android:layout_marginBottom="72dp"
            android:backgroundTint="#2196F3"
            android:text="Carica" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>