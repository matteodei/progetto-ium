<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/containerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mybutton"
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499">

        <!-- Nome -->
        <TextView
            android:id="@+id/nomeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome:"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!-- Corso di laurea -->
            <TextView
                android:id="@+id/corsoLaureaTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="CdL"
                android:textAlignment="center"
                android:textSize="18sp" />

            <!-- Anno -->
            <TextView
                android:id="@+id/annoTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Anno"
                android:textAlignment="center"
                android:textSize="18sp" />

            <!-- Semestre -->
            <TextView
                android:id="@+id/semestreTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Semestre"
                android:textAlignment="center"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Argomenti del corso -->
        <TextView
            android:id="@+id/argomentiTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Argomenti del corso:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/seguitaTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="seguita"
            android:textSize="18sp"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:textAlignment="center">

            <Button
                android:id="@+id/visualizzaPdfTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:text="Visualizza PDF" />

            <Button
                android:id="@+id/seguiButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="segui" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>